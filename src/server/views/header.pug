doctype html
html
  head
    title NetsBlox
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(href='style/carousel_theme.css', rel='stylesheet')
    link(href='style/webgme_www.css', rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/lightslider/1.1.6/css/lightslider.min.css', rel='stylesheet')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto')
    link(rel='stylesheet', type='text/css', href='style/main.css')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='NetsBlox is a visual programming language and cloud-based environment that enables novice programmers to create networked programs such as multi-player games.')
  body
    #main-content
      nav.navbar.navbar-inverse
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') NetsBlox
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li.active
                a(href='') About
              li
                a#editor(href=env.EDITOR_ADDRESS) Try Now
              li
                a(href='NetsBloxWhitePaper.pdf') White Paper
              li
                a(href='tutorials') Tutorials
              li
                a(href='http://community.netsblox.org') Community
              li
                a(href='', id="login" data-toggle='modal', data-target='#login-modal', onClick="document.querySelector('form input').focus();") Login
              li
                a(href='', id="logout" class="hidden") Logout
            <p class="hidden navbar-text navbar-right">Signed in as <b>foo</b></p>
